<Window x:Class="Hu_s_WindowExplorer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hu_s_WindowExplorer"
        mc:Ignorable="d"
        Title="Hu's 파일 탐색기" Height="700" Width="1000">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <local:TopBar x:Name="topBar" Grid.Row="0"/>
        <Grid Name="subGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <local:SideBar x:Name="sideBar" Grid.Column="0"/>
            <GridSplitter Grid.Column="0" Grid.Row="1" Width="3" Background="DarkGray"/>
            <local:MainPage x:Name="mainScene" Grid.Column="1"/>
        </Grid>
    </Grid>

</Window>
