<UserControl x:Class="Hu_s_WindowExplorer.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hu_s_WindowExplorer"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="840">

    <ScrollViewer>
        <ListView Name ="listView" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

        </ListView>
    </ScrollViewer>
</UserControl>
